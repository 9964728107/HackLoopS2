<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Page</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Colony Management</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/event">Events</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/createProfile">Profile</a>
                </li>
                <!-- Add more navigation links as needed -->
            </ul>
        </div>
    </nav>
    <!-- Include your navigation bar code here -->
   
    <div class="container mt-5">
        <h1>Upcoming Events</h1>
        <% if (events.length==0) { %>
            <h2>No Events added yet :(</h2>
            <% } %>
        <!-- Add Event Button -->
        <form method="get" action="/addevent">
            <button class="btn btn-primary mb-3">Add Event</button>
        </form>
       

        <!-- Event Cards -->
        <div class="card-deck">
            <% events.forEach(event=> { %>
                <div class="card">
                    <!-- Event Image (if available) -->
                    <% if (event.image) { %>
                        <img src="<%= event.image  %>"
                            class="card-img-top" alt="Event Image">
                        <% } %>

                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= event.Name %>
                                </h5>
                                <p class="card-text">
                                    <%= event.description %>
                                </p>
                                <p class="card-text"><small class="text-muted">Event Date: <%= event.date.toDateString()
                                            %></small></p>
                                <p class="card-text"><small class="text-muted">Location: <%= event.location %></small>
                                </p>
                            </div>
                            <form action="/event/<%= event.id %>?_method=DELETE" method="post">
                            <button class="btn btn-dark" >
                                Delete
                            </button></form>
                </div>
                <% }); %>
        </div>
    </div>

    <!-- Bootstrap JS and Popper.js (required for Bootstrap components) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>