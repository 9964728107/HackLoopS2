    <h1>Add New Event</h1>

    <form action="/event" method="post" >
        <!-- Image Upload -->
        <br>
        <!-- <label for="image">Event Image:</label>
        <input type="file" name="event[image]" id="image" accept="image/*" required> -->
             <br>
        <!-- Event Name -->
        <label for="name">Event Name:</label>
        <input type="text" name="event[Name]" id="name" required>
<br>
        <!-- Event Date -->
        <label for="date">Event Date:</label>
        <input type="date" name="event[date]" id="date" required>
<br>
        <!-- Event Description -->
        <label for="description">Event Description:</label>
        <textarea name="event[description]" id="description" required></textarea>
<br>
        <!-- Event Location -->
        <label for="location">Event Location:</label>
        <input type="text" name="event[location]" id="location" required>
<br>
        <!-- Event Tags -->
        <label for="tags">Event Tags (comma-separated):</label>
        <input type="text" name="event[tags]" id="tags">
<br>    
        <!-- Submit Button -->
        <button type="submit">Add Event</button>
    </form>
</body>

