      margin-top: 5%;
    }

    #title {

      background: linear-gradient(to right, #3498db, #2ecc71);

      color: #fff;
    }

    .container-fluid {
      padding: 3% 15% 16%;
    }

    h1 {
      font-family: 'Montserrat-Black', sans-serif;
      font-size: 3.5rem;
      line-height: 1.5;
    }

    h2 {
      font-family: " montserrat-bold";
      font-size: 3rem;
      line-height: 3rem;

    }

    .card img {
      width: 240px;
      height: 240px;
    }

    



    /* Title  */
    .title-img {
      position: absolute;
      width: 90%;

      right: -4%;
      bottom: -10%;
    }

    .col-lg-6 {
      position: relative;
    }

    /* Features */
    #features {
      position: relative;
      z-index: 1;
      padding: 7% 15%;
      background-color: #fff;

    }

    h1 {
      font-size: 3.0rem;
    }

    h3 {
      font-family: "montserrat-bold";
      font-size: 1.5rem;
    }

    p {
      color: #8f8f8f;
    }

    .feature-box {
      text-align: center;
      padding: 5%;

    }

    .peach {
      color: #ef8172;
      font-size: 40px;
    }

    .peach:hover {
      color: #ff4c68;
    }

    /* Navigation Bar */
    .navbar {
      padding: 0 0 4.5rem;

    }

    .navbar-brand {
      font-family: "ubuntu";
      font-size: 2.0rem;
      font-weight: bold;
    }

    .nav-item {
      padding: 0 18px;
    }

    .nav-link {
      font-size: 1.2rem;
      font-family: "montserrat-light";
    }

    /* Download Buttons */
    .download-button {
      margin: 5% 3% 5% 0;
    }

    /* testimonials */
    #testimonials {
      text-align: center;
      background-color: #ef8172;
      color: white;
    }

    .padding {
      padding: 7% 15%;

    }

    .testimonial-image {
      width: 10%;
      border-radius: 100%;
    }

    #press {
      background-color: #ef8172;
      text-align: center;
      color: white;

      padding-bottom: 3%;
    }

    .press-logo {
      width: 15%;
      margin: 20px 20px 50px;
    }

    /* Memories */
    #memories {
      text-align: center;
      padding: 100px;
    }

    @media (max-width:1028px) {
      #title {
        text-align: center;
      }

      .title-img {
        position: static;
        rotate: 0deg;
      }
    }

    /* Call to Action  */
    #cta {
      padding: 7% 7% 7% 7%;
      background-color: #ff4c68;
      text-align: center;
    }

    .issue {
      width: 40%;
      margin: -4% auto 7%;
      font-size: 50px;
      color: #fff;
      font-family: "Montserrat Black";
    }

    .acta-btn {
      margin: auto 2% auto;
    }

    .gcta-btn {
      margin: auto 2% auto;
    }

    /* Footer */
    #footer {
      padding: 4% 4% 4% 1%;
      text-align: center;
    }

    .contact-f {
      color: black;
    }

    .x {
      margin: auto 0.5% auto;
    }
