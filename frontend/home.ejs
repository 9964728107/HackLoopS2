    <button class="btn btn-dark btn-lg acta-btn" type="button"><i class="fa fa-heart " aria-hidden="true"></i>
      Events</button>

    <button class="btn btn-outline-light btn-lg gcta-btn" type="button"><i class="fa fa-credit-card-alt "
