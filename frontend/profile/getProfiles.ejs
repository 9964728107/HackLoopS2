  <div class="container mt-3">
    <div>
        <br>
        <h2>These are all the profiles in our society</h2>
        <br>
    </div>

    <% if (profiles.length==0) { %>
      <h2>No profiles added yet :(</h2>
      <h4>Be the first One</h4>
    <% } %>

    <div class="row">
        
      <% profiles.forEach(profile => { %>
        <div class="card col-md-4 mb-3">
          <img class="card-img-top" src="<%= profile.profileImage %>" alt="<%= profile.username %>">
          <div class="card-body">
            <h5 class="card-title"><%= profile.username %></h5>
            <p class="card-text">Phone: <%= profile.phoneNumber %></p>
            <form action="/profile/<%=profile._id%>?_method=DELETE" method="post">
                <button class="btn btn-danger" >Delete</button>
            </form>
            
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
