<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Issue Page</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>

    <nav  style=" margin-top: -2%;" class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">MyCommunity</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/issue">Issues</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/createProfile">Profile</a>
                </li>
                <!-- Add more navigation links as needed -->
            </ul>
        </div>
    </nav>
   
    <div class="container mt-5">
        <h1>Ongoing Issues</h1>
        <% if (issues.length === 0) { %>
            <h2>No Ongoing Issues :(</h2>
        <% } %>
        
        <!-- Add Issue Button -->
        <form method="get" action="/addissue">
            <button class="btn btn-primary mb-3">Add Issue</button>
        </form>

        <!-- Issue Cards -->
        <div class="card-deck">
            <% issues.forEach(issue => { %>
                <div class="card">
                    <!-- Issue Image (if available) -->
                    <% if (issue.image) { %>
                        <img src="<%= issue.image %>"
                            class="card-img-top" alt="Issue Image">
                    <% } %>

                    <div class="card-body">
                        <h5 class="card-title">
                            <%= issue.Title %>
                        </h5>
                        <p class="card-text">
                            <%= issue.description %>
                        </p>
                        <p class="card-text"><small class="text-muted">Issue Date: <%= issue.date.toDateString()
                                %></small></p>
                        <p class="card-text"><small class="text-muted">Location: <%= issue.location %></small>
                        </p>
                    </div>
                    
                    <!-- Delete Button -->
                    <form action="/issue/<%= issue.id %>?_method=DELETE" method="post">
                        <button class="btn btn-dark">Delete</button>
                    </form>
                </div>
            <% }); %>
        </div>
        
        <hr>
        
        <h1>Resolved Issues</h1>
        <% if (resolvedIssues.length === 0) { %>
            <h2>No Resolved Issues :(</h2>
        <% } %>
        
        <!-- Resolved Issue Cards -->
        <div class="card-deck">
            <% resolvedIssues.forEach(resolvedIssue => { %>
                <div class="card">
                    <!-- Resolved Issue Image (if available) -->
                    <% if (resolvedIssue.image) { %>
                        <img src="<%= resolvedIssue.image %>"
                            class="card-img-top" alt="Resolved Issue Image">
                    <% } %>

                    <div class="card-body">
                        <h5 class="card-title">
                            <%= resolvedIssue.Title %>
                        </h5>
                        <p class="card-text">
                            <%= resolvedIssue.description %>
                        </p>
                        <p class="card-text"><small class="text-muted">Resolved Date: <%= resolvedIssue.resolvedDate.toDateString()
                                %></small></p>
                        <p class="card-text"><small class="text-muted">Location: <%= resolvedIssue.location %></small>
                        </p>
                    </div>
                    
                    <!-- Delete Button (optional for resolved issues) -->
                    <!-- <form action="/issue/<%= resolvedIssue.id %>?_method=DELETE" method="post">
                        <button class="btn btn-dark">Delete</button>
                    </form> -->
                </div>
            <% }); %>
        </div>
    </div>

    <!-- Bootstrap JS and Popper.js (required for Bootstrap components) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
