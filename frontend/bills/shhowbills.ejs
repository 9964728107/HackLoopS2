<h2>Bills</h2>
<br>
<!-- Add Bill Button -->
<% if (user.Type=="ADMIN") { %>
<form method="get" action="/maintainanceForm">
    <button class="btn btn-dark mb-3">ADD BILL &nbsp; <i class="fa fa-money" aria-hidden="true"></i></button>
</form>
<% } %>

<!-- Bill Cards -->
<% if (bills.length==0) { %>
    <br><br><br>
 <h2>Bills are not added yet</h2>
 <br><br><br>
 <br>
<% } %>
<div class="card-deck">
    <% bills.forEach(bill=> { %>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <%= bill.billSubject %>
                </h5>
                <p class="card-text">
                    Amount: $<%= bill.amount %>
                </p>
                <p class="card-text">
                    Due Date: <%= bill.dueDate.toDateString() %>
                </p>
                <p class="card-text"><small class="text-muted">Created At: <%= bill.createdAt.toDateString() %></small>
                </p>
            </div>
            
                
                <% if ( user.Type=="USER" ) { %>
                <form action="#">
                    <button class="btn-primary ms-3">Pay</button>
                    
                </form>
                <br>
                <% } %>
                <% if ( user.Type=="ADMIN" ) { %>
                <form id="delete" action="/bills/<%=bill.id %>?_method=DELETE" method="post">
                    <button style="position: absolute; right: 5rem; border-radius: 5px;" class="btn-sm btn-danger right-2"
                        form="delete" type="submit">delete</button>
            
                </form>
                <br><br>
                <% } %>
        </div>
        <% }); %>
</div>



                          

                           






