<!-- Add Maintenance Bill Form -->
<div class="container mt-5">
    <h2>Add Maintenance Bill</h2>
    <form action="/addMaintenanceBill" method="post">
        <div class="mb-3">
            <label for="billSubject" class="form-label">Bill Subject</label>
            <input type="text" class="form-control" id="billSubject" name="billSubject" required>
        </div>
        <div class="mb-3">
            <label for="amount" class="form-label">Amount</label>
            <input type="number" class="form-control" id="amount" name="amount" required>
        </div>
        <div class="mb-3">
            <label for="dueDate" class="form-label">Due Date</label>
            <input type="date" class="form-control" id="dueDate" name="dueDate" required>
        </div>
        <button type="submit" class="btn btn-dark">Add Maintenance Bill</button>
    </form>
</div>
